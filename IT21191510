class Financial_report
{
private:
    int fId;
    Order* odr;

public:
    Financial_report();
    Financial_report(int ofId, Order* o);
    void displayFinance();
};

// student id : IT21191510
// Name : Mendis A.S.P.
// MLB_01.01_06
// Malabe_weekdays
#include "Financial_report.h"

Financial_report::Financial_report()
{

}

Financial_report::Financial_report(int ofId, Order* o)
   {
       fId = ofId;
       odr = o;
   }

 void Financial_report::displayFinance()
   {
        cout << "fId" << fId << endl;
        odr->displayOrder();
   }
